<div class="max-w-lg mx-auto mt-16 p-8 bg-white rounded-xl shadow-md">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Your Short URL</h1>

  <div class="mb-4 whitespace-normal break-words">
    <p class="text-gray-600"><span class="font-semibold">Original URL:</span> <%= @short_url.original_url %></p>
  </div>

  <div class="mb-4 flex items-center">
    <p class="text-gray-600">
      <span class="font-semibold">Short URL:</span> 
      <%= link_to short_url(@short_url.slug), short_url(@short_url.slug), target: "_blank", class: "text-blue-600 hover:underline break-all" %>
    </p>

    <button 
      onclick="navigator.clipboard.writeText('<%= short_url(@short_url.slug) %>')" 
      class="ml-2 p-2 text-gray-500 hover:text-blue-600 cursor-pointer"
      title="Copy to clipboard"
    >
      <svg xmlns="http://www.w3.org/2000/svg" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke-width="1.5" 
          stroke="currentColor" 
          class="w-5 h-5">
        <path stroke-linecap="round" 
              stroke-linejoin="round" 
              d="M9 12h6m-6 4h6m2 4H7a2 2 0 01-2-2V6a2 2 0 012-2h3l1-1h2l1 1h3a2 2 0 012 2v12a2 2 0 01-2 2z" />
      </svg>
    </button>
  </div>

  <div class="mb-4">
    <p class="text-gray-600"><span class="font-semibold">Visits:</span> <%= @short_url.visits_count %></p>
  </div>

  <div class="text-center mt-6">
    <%= link_to "Create another short URL", new_short_url_path, class: "inline-block bg-blue-600 text-white font-bold px-5 py-2 rounded hover:bg-blue-700 transition-colors duration-200" %>
  </div>
</div>
