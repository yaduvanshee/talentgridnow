<div class="max-w-md mx-auto mt-16 p-8 bg-white rounded-xl shadow-lg">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Shorten Your URL</h2>

  <%= form_with(model: @short_url, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :original_url, "Original URL", class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :original_url, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :restrict_visit_count, "Restrict Visit Count", class: "block text-gray-700 font-medium mb-2" %>
      <%= form.number_field :restrict_visit_count, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.submit "Shorten URL", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition-colors duration-200" %>
    </div>
  <% end %>
</div>
